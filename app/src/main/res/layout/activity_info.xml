<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E7E7E7"
        android:orientation="vertical"
        tools:context=".Activity.AboutUsActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarAboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/nav_header_10dp"
                    android:layout_marginTop="@dimen/nav_header_10dp"
                    android:layout_marginRight="@dimen/nav_header_10dp"
                    android:layout_marginBottom="@dimen/nav_header_10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/splash" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/nav_header_10dp"
                        android:layout_marginTop="@dimen/nav_header_10dp"
                        android:layout_marginRight="@dimen/nav_header_10dp"
                        android:layout_marginBottom="@dimen/nav_header_10dp"
                        android:text="P Wallpaper"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/nav_header_10dp"
                    android:layout_marginTop="@dimen/nav_header_10dp"
                    android:layout_marginRight="@dimen/nav_header_10dp"
                    android:layout_marginBottom="@dimen/nav_header_10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_information" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/nav_header_10dp"
                            android:layout_marginRight="@dimen/nav_header_10dp"
                            android:layout_marginBottom="@dimen/nav_header_10dp"
                            android:text="Version"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/nav_header_10dp"
                            android:layout_marginRight="@dimen/nav_header_10dp"
                            android:layout_marginBottom="@dimen/nav_header_10dp"
                            android:text="1.0.1"
                            android:textColor="#000"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/nav_header_10dp"
                    android:layout_marginTop="@dimen/nav_header_10dp"
                    android:layout_marginRight="@dimen/nav_header_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/nav_header_10dp"
                        android:layout_marginRight="@dimen/nav_header_10dp"
                        android:layout_marginBottom="@dimen/nav_header_10dp"
                        android:text="User"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/nav_header_10dp"
                    android:layout_marginRight="@dimen/nav_header_10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_information" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/nav_header_10dp"
                            android:layout_marginRight="@dimen/nav_header_10dp"
                            android:text="Name"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/nav_header_10dp"
                            android:layout_marginRight="@dimen/nav_header_10dp"
                            android:layout_marginBottom="@dimen/nav_header_10dp"
                            android:text="Rustic Vegan"
                            android:textColor="#000"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/nav_header_10dp"
                    android:layout_marginRight="@dimen/nav_header_10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_information" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/nav_header_10dp"
                            android:layout_marginRight="@dimen/nav_header_10dp"
                            android:text="Instagram_username"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvIstagram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/nav_header_10dp"
                            android:layout_marginRight="@dimen/nav_header_10dp"
                            android:layout_marginBottom="@dimen/nav_header_10dp"
                            android:text="rustic.vegan"
                            android:textColor="#000"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/nav_header_10dp"
                    android:layout_marginRight="@dimen/nav_header_10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_information" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/nav_header_10dp"
                            android:layout_marginRight="@dimen/nav_header_10dp"
                            android:text="Lives"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvLive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/nav_header_10dp"
                            android:layout_marginRight="@dimen/nav_header_10dp"
                            android:layout_marginBottom="@dimen/nav_header_10dp"
                            android:text="Los Angeles"
                            android:textColor="#000"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/nav_header_10dp"
                    android:layout_marginTop="@dimen/nav_header_10dp"
                    android:layout_marginRight="@dimen/nav_header_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/nav_header_10dp"
                        android:layout_marginRight="@dimen/nav_header_10dp"
                        android:layout_marginBottom="@dimen/nav_header_10dp"
                        android:text="About Image"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/nav_header_10dp"
                    android:layout_marginRight="@dimen/nav_header_10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/nav_header_10dp"
                                android:layout_marginRight="@dimen/nav_header_10dp"
                                android:text="Kích thước ảnh:"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvImageSizeWeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="@dimen/nav_header_10dp"
                                android:text=""
                                android:textColor="#000"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/nav_header_10dp"
                                android:text=""
                                android:textColor="#000"
                                android:textSize="15sp" />
                            <TextView
                                android:id="@+id/tvImageSizeHeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="x"
                                android:textColor="#000"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/nav_header_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/nav_header_10dp"
                                android:layout_marginRight="@dimen/nav_header_10dp"
                                android:text="Color:"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/nav_header_10dp"
                                android:layout_marginRight="@dimen/nav_header_10dp"
                                android:text=""
                                android:textColor="#000"
                                android:textSize="15sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/nav_header_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/nav_header_10dp"
                                android:layout_marginRight="@dimen/nav_header_10dp"
                                android:text="Ngày đăng:"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvDateSubmitted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/nav_header_10dp"
                                android:layout_marginRight="@dimen/nav_header_10dp"
                                android:text=""
                                android:textColor="#000"
                                android:textSize="15sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/nav_header_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/nav_header_10dp"
                                android:layout_marginRight="@dimen/nav_header_10dp"
                                android:text="Số người đã xem:"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/nav_header_10dp"
                                android:layout_marginRight="@dimen/nav_header_10dp"
                                android:text=""
                                android:textColor="#000"
                                android:textSize="15sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/nav_header_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/nav_header_10dp"
                                android:layout_marginRight="@dimen/nav_header_10dp"
                                android:text="Số người đã thích:"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvLike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/nav_header_10dp"
                                android:layout_marginRight="@dimen/nav_header_10dp"
                                android:text=""
                                android:textColor="#000"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>